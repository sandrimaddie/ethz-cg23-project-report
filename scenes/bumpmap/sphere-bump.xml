<scene>
	<!-- Independent sample generator, user-selected samples per pixel -->
	<sampler type="independent">
		<integer name="sampleCount" value="32"/>
	</sampler>

	<!-- Use a direct illumination integrator -->
	<integrator type="path_mis" />

	<!-- Render the scene as viewed by a perspective camera -->
	<camera type="perspective">
		<transform name="toWorld">
			<lookat target="0,0,3" origin="10,10,10" up="0,0,1"/>
		</transform>

		<!-- Field of view: 40 degrees -->
		<float name="fov" value="40"/>

		<!-- 512 x 512 pixels -->
		<integer name="width" value="720"/>
		<integer name="height" value="720"/>
	</camera>

	<!-- Load a sphere shape -->
    <mesh type="sphere">
		<!--string name="filename" value="meshes/camelhead.obj"/>
		<transform name="toWorld">
			<scale value="7,7,7"/>
			<rotate axis="1,0,0" angle="100"/>
			<rotate axis="0,0,1" angle="100"/>
			<translate value = "0,0,4"/>
		</transform-->
        <point name="center" value="0,0,3"/>
        <float name="radius" value="3"/>
        <bsdf type="bumpmap">

			<texture type="imagetexture" name="albedo">
				<!--vector name="scale" value="2,2"/-->
            	<string name="filename" value="textures/debugTexture.exr"/>
				<boolean name="repeat" value="true"/>
				<boolean name="interpolate" value="false"/>
        	</texture>
			
        	<bsdf type="diffuse">
				<texture type="imagetexture" name="albedo">
					<!--vector name="scale" value="2,2"/-->
            		<string name="filename" value="textures/debugTexture.exr"/>
					<boolean name="repeat" value="true"/>
        		</texture>
            
       		</bsdf>
		</bsdf>
    </mesh>

	<!-- Ground plane -->
	<mesh type="obj">
		<string name="filename" value="meshes/plane.obj"/>

		<bsdf type="diffuse">
			<!--<color name="albedo" value="1,1,1"/>-->
		</bsdf>

		<transform name="toWorld">
			<scale value="10,1,10"/>
			<rotate axis="1,0,0" angle="90"/>
			<translate value="0,0,-1"/>
		</transform>

	</mesh>

	<!-- Illuminate using a point light -->
	<emitter type="point">
		<point name="position" value="3,7,10"/>
		<color name="power" value="2000,2000,2000"/>
	</emitter>

	<emitter type="point">
		<point name="position" value="5,7,10"/>
		<color name="power" value="2000,2000,2000"/>
	</emitter>

</scene>
