<?xml version='1.0' encoding='utf-8'?>

<scene version="0.6.0">

	<integrator type="path">
		<integer name="max_depth" value="15"/>
	</integrator>

	<sensor type="perspective">
		<float name="fov" value="40"/>
		<transform name="toWorld">
			<scale value="-1,1,1"/>
			<lookat target="0,0,3" origin="10,10,10" up="0,0,1"/>
		</transform>

		<sampler type="independent">
            <integer name="sample_count" value="32"/>
        </sampler>

		<film type="hdrfilm">
			<integer name="height" value="720"/>
			<integer name="width" value="720"/>
		</film>
	</sensor>

	<!-- Independent sample generator, user-selected samples per pixel -->
	<sampler type="independent">
		<integer name="sampleCount" value="32"/>
	</sampler>

	<!-- Load a sphere shape -->
    <shape type="sphere">
		<!--string name="filename" value="meshes/camelhead.obj"/-->

        <point name="center" value="0,0,3"/>
        <float name="radius" value="3"/>

		<!--transform name="toWorld">
			<scale value="7,7,7"/>
			<rotate value="1,0,0" angle="100"/>
			<rotate value="0,0,1" angle="100"/>
			<translate value = "0,0,4"/>
		</transform-->
		
		<bsdf type="bumpmap">
			<texture type="bitmap" name="reflectance">
					<!--vector name="scale" value="0.1,0.2"/-->
            	<string name="filename" value="textures/debugTexture.exr"/>
				<string name="wrap_mode" value="repeat"/>
				<transform name="to_uv">
					<translate  x="0" y="1"/>
				</transform>
        	</texture>

        	<bsdf type="diffuse">
				<texture type="bitmap" name="reflectance">
					<!--vector name="scale" value="0.1,0.2"/-->
					<transform name="to_uv">
						<translate  x="0" y="1"/>
					</transform>
            		<string name="filename" value="textures/debugTexture.exr"/>
					<string name="wrap_mode" value="repeat"/>
        		</texture>
            
       		</bsdf>
		</bsdf>
		<transform name="toWorld">
			<rotate value="0,0,1" angle="180"/>
		</transform>
    </shape>

	<!-- Ground plane -->
	<shape type="obj">
		<string name="filename" value="meshes/plane.obj"/>

		<bsdf type="diffuse">
			<!--<color name="albedo" value="1,1,1"/>-->
		</bsdf>

		<transform name="toWorld">
			<scale value="10,1,10"/>
			<rotate value="1,0,0" angle="90"/>
			<translate value="0,0,-1"/>
		</transform>

	</shape>

	<!-- Illuminate using a point light -->
	<emitter type="point">
		<point name="position" x="3" y="7" z="10"/>
		<rgb name="intensity" value="140"/>
	</emitter>

	<emitter type="point">
		<point name="position" x="5" y="7" z="10"/>
		<rgb name="intensity" value="140"/>
	</emitter>

</scene>
